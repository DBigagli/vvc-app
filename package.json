{
  "name": "@vivocha/widgets",
  "version": "0.0.0",
  "private": true,
  "description": "Vivocha Widgets Repository",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --include-dependencies",
    "build:app": "npm --prefix interaction/app/default run build",
    "build:core": "npm --prefix interaction/lib/core run build",
    "build:layout": "npm --prefix interaction/lib/layout run build",
    "clean": "npm run clean:artifacts && npm run clean:packages && npm run clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean -y",
    "clean:root": "npx rimraf node_modules",
    "commit": "./node_modules/.bin/git-cz",
    "precodebuild": "npm run clean",
    "codebuild": "./build.sh -i aws/codebuild/standard:3.0 -a `pwd`/artifacts -s `pwd` -m -c -e .env"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "lerna": "^3.18.3"
  },
  "dependencies": {
    "@angular/cli": "~8.3.19"
  }
}
